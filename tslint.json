{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest"
    ],
    "jsRules": {
      "semicolon": {
        "options": ["never"]
      },
      "quotemark": {
        "options": ["single", "avoid-escape"]
      },
      "trailing-comma": {
        "options": {
          "multiline": "never",
          "singleline": "never"
        }
      },
      "object-literal-sort-keys": false,
      "ordered-imports": false,
      "interface-name": false,
      "no-implicit-dependencies": [true, "dev"]
    },
    "rules": {
      "semicolon": {
        "options": ["never"]
      },
      "quotemark": {
        "options": ["single", "avoid-escape"]
      },
      "trailing-comma": {
        "options": {
          "multiline": "never",
          "singleline": "never"
        }
      },
      "object-literal-sort-keys": false,
      "ordered-imports": true,
      "interface-name": false,
      "no-implicit-dependencies": [true, "dev"]
    },
    "rulesDirectory": []
}
